# Display system information summary
# Usage: sysinfo

# Use library functions for consistency and performance
local os=$(os_name)
local icon=$(os_icon)
local shell_v=$(shell_ver)
local arch=$(get_arch)
local uptime=$(get_uptime)
local version=$(os_version)
local codename=$(os_codename)

print -n -- "This is ${icon} ${y}${os}${x} ${version} (${codename}) "
print -- "with ${y}zsh${x} ${shell_v} running on ${y}${arch}${x} for ${c}${uptime}${x}"